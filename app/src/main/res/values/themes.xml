<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Srijan24" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#07181b</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/text</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/bgAlternate</item>
    </style>

    <style name="Theme.Srijan24" parent="Base.Theme.Srijan24" />

    <style name="h0">
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">@font/futura</item>
    </style>

    <style name="h1">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/futura</item>
    </style>

    <style name="h2">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="h3">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="h4">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="h5">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="h6">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="navDrawer">

    </style>

    <style name="ProgressBarTheme">
        <item name="colorSecondary">@color/primary</item>

    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:background">@drawable/button_background1</item>
        <item name="android:fontFamily">@font/futura_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Set the text color for the title -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Set the text color for the message -->
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:textColor">@color/white</item>

<!--        <item name="android:dialogTheme">@style/CustomAlertDialogTheme</item>-->

        <item name="android:background">@color/material_dialog</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/border_dialog</item>
    </style>
</resources>