<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#071d1d"
        app:shapeAppearance="@style/ShapeAppearance.MyApp.MediumComponent.Rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            >
            <TextView
                style="@style/h1"
                android:textColor="#C8C7C7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C8C7C7"
                android:text="Please log in to continue" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textCursorDrawable="@color/primary"
                android:hint="someone@email.com"
                android:textColor="@color/primary"
                android:textColorHint="#6FFBE10E"
                android:background="@drawable/border2"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:layout_marginTop="18dp"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textCursorDrawable="@color/primary"
                android:textColor="@color/primary"
                android:hint="password"
                android:textColorHint="#6FFBE10E"
                android:background="@drawable/border2"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:layout_marginTop="18dp"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:textColor="#C8C7C7"
                android:text="Forgot password?"
                android:layout_gravity="end" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                style="@style/btn"
                android:layout_marginTop="24dp"
                android:layout_gravity="end"
                android:backgroundTint="#F1A820"
                android:drawableEnd="@drawable/ic_btn_right_arrow"
                android:text="LOGIN" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:textSize="16sp"
                    android:textColor="#C8C7C7"
                    android:text="Don't have an account?" />

                <TextView
                    android:id="@+id/registerTextView"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_marginStart="4dp"
                    android:textSize="16sp"
                    android:textColor="#F1A820" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>